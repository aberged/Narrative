{
  "name": "narrative",
  "displayName": "Narrative",
  "description": "",
  "version": "0.0.5",
  "publisher": "Potok",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:narrative"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "narrative.refreshEntry",
        "title": "Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "narrative.selectNode",
        "title": "Select"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "narrative",
          "name": "Narrative"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "package-explorer",
          "title": "Package Explorer",
          "icon": "media/dep.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "narrative.refreshEntry",
          "when": "view == narrative",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "narrative": "file:"
  }
}
